<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    android:minHeight="24dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    android:id="@+id/activity_history_cardview"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/activity_history_cardview_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/activity_history_cardview_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="12dp"
             android:gravity="end"
             android:layout_below="@id/activity_history_cardview_begin"
             android:layout_alignParentRight="true"
             android:layout_alignParentEnd="true"
             android:layout_toRightOf="@+id/activity_history_cardview_begin"
             android:layout_toEndOf="@+id/activity_history_cardview_begin"
             android:layout_alignBaseline="@+id/activity_history_cardview_begin"
             />
        <TextView
            android:id="@+id/activity_history_cardview_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="12dp"
            android:layout_below="@id/activity_history_cardview_begin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/activity_history_cardview_end"
            android:gravity="center_vertical"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>